            </MenuItem>

            <MenuItem Header="Help">
                <MenuItem Header="View Help"/>
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>

        <TabControl TabStripPlacement="left">
            <TabItem Header="Map">
                <Grid>
                    
                </Grid>
                
            </TabItem>
            <TabItem Header="Spritesheet">
                
                
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>